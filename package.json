{
  "name": "cvs-svc-preparers",
  "version": "1.0.0",
  "description": "Microservice that stores and serves the preparers data",
  "main": "handler.js",
  "scripts": {
    "start": "npm run tslint && BRANCH=local ./node_modules/serverless/bin/serverless offline start",
    "start:test": "npm run tslint && node_modules/gulp/bin/gulp.js start-serverless",
    "end:test": "node_modules/gulp/bin/gulp.js kill-serverless",
    "build": "node_modules/typescript/bin/tsc --rootDir ./ --outDir .build --sourceMap false && npm run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" \\) | cpio -pdm .build && find tests -type f \\( -name \"*.yml\" -or -name \"*.json\" \\)  | cpio -pdm .build",
    "test": "BRANCH=local SLS_DEBUG=* jest --testMatch=\"**/*.unitTest.ts\" --coverage",
    "test-i": "BRANCH=local jest --testMatch=\"**/*.intTest.ts\"",
    "tests": "npm run test && sls offline start > /dev/null 2>&1 & sleep 4 && npm run test-i && kill %1",
    "prepush": "npm test && npm run tslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "tslint": "tslint src/**/*.ts tests/**/*.ts -q --fix",
    "sonar-scanner": "npm run tslint && npm run coverage && sonar-scanner",
    "coverage": "BRANCH=local SLS_DEBUG=* jest --testMatch=\"**/*.*Test.ts\" --coverage",
    "audit-dep": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-"
  },
  "author": "",
  "license": "MIT",
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@types/chai": "^4.2.3",
    "@types/jest": "^24.0.15",
    "@types/jest-plugin-context": "^2.9.2",
    "@types/lambda-tester": "^3.5.1",
    "@types/node": "^10.14.18",
    "@types/request": "^2.48.3",
    "@types/sinon": "^7.0.13",
    "@types/supertest": "^2.0.8",
    "audit-filter": "^0.4.3",
    "aws-lambda-mock-context": "^3.2.1",
    "babel-jest": "^24.8.0",
    "chai": "^4.2.0",
    "expect": "^24.9.0",
    "gulp": "^4.0.2",
    "jest": "^24.8.0",
    "jest-plugin-context": "^2.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "lambda-tester": "^3.6.0",
    "nyc": "^14.1.1",
    "serverless": "^1.52.2",
    "serverless-dynamodb-local": "^0.2.38",
    "serverless-offline": "^5.11.0",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-jsdoc-rules": "^0.2.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "aws-sdk": "^2.533.0",
    "aws-xray-sdk": "^2.3.6",
    "node-yaml": "^3.2.0",
    "path-parser": "^4.2.0",
    "reflect-metadata": "^0.1.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dvsa/cvs-svc-preparers-mock.git"
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "testURL": "http://localhost"
  },
  "jestSonar": {
    "reportPath": ".reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
