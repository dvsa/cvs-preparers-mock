{
  "name": "cvs-svc-preparers",
  "version": "1.0.0",
  "description": "Microservice that stores and serves the preparers data",
  "main": "handler.js",
  "scripts": {
    "start": "npm run eslint && BRANCH=local ./node_modules/serverless/bin/serverless offline start",
    "start:test": "npm run eslint && node_modules/gulp/bin/gulp.js start-serverless",
    "end:test": "node_modules/gulp/bin/gulp.js kill-serverless",
    "test": "node_modules/.bin/mocha tests/**/*.unitTest.js",
    "test-i": "node_modules/.bin/mocha tests/**/*.intTest.js",
    "tests": "npm run test && sls offline start > /dev/null 2>&1 & sleep 4 && npm run test-i && kill %1",
    "prepush": "npm test && npm run eslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "eslint": "eslint . --config=.eslintrc.json --fix  -f json -o report.json",
    "sonar-scanner": "npm run eslint && npm run coverage && sonar-scanner",
    "coverage": "nyc mocha tests/unit/*.unitTest.js && nyc report --reporter=lcov"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.405.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.14.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect": "^24.1.0",
    "gulp": "^4.0.0",
    "mocha": "^4.1.0",
    "serverless": "^1.37.1",
    "serverless-dynamodb-local": "0.2.35",
    "serverless-offline": "^3.33.0",
    "standard": "^12.0.1",
    "supertest": "^3.4.2",
    "nyc": "^13.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dvsa/cvs-svc-preparers-mock.git"
  }
}
